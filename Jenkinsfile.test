pipeline {
    agent any

    stages {
        stage('build') {
            agent{
                docker{
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                echo 'Hello World'
                sh 'ls -la'
                sh 'node --version'
                sh 'npm ci'
                sh 'npm run build'
            }
        }
        stage('Docker-test'){
            agent{
                docker{
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps{
                echo 'hello docker-test'
                sh 'npm --version'
                sh 'ls -la'
                sh 'touch container-yes.txt'
                sh 'test -f src/index.js'
            }
        }
    }
}
