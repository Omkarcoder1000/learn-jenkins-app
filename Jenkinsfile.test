pipeline {
    agent any

    stages {
        stage('build') {
            agent{
                docker{
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                echo 'Hello World'
                sh 'ls -la'
                sh 'node --version'
                sh 'npm ci'
                sh 'npm run build'
            }
        }
        stage('Docker-test'){
            agent{
                docker{
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps{
                echo 'hello docker-test'
                sh 'npm --version'
                sh 'ls -la'
                sh '#touch container-yes.txt'
                sh 'test -f src/index.js'
                sh'npm test'
            }
        }
        stage('Playwright'){
            agent{
                docker{
                    image 'mcr.microsoft.com/playwright:v1.58.0-noble'
                    reuseNode true
                }
            }
            steps{
               sh'''
                    npm install serve
                    npx node_modules/serve -s build &
                    sleep 10
                    npx playwright test
               '''
            }
        }
    }

    post{
        always{
            junit 'test-results/junit.xml'
        }
    }
}
