pipeline {
    agent{
        docker{
            image 'mcr.microsoft.com/playwright:v1.58.0-noble'
            reuseNode true
        }
    }

    stages {
        stage('build') {
           
            steps {
                echo 'Build started'
                sh 'ls -la'
                sh 'node --version'
                sh 'npm ci'
                sh 'npm run build'
            }
        }
        stage('Junit-test'){
           
            steps{
                echo 'Junit-started'
                sh 'npm --version'
                sh 'ls -la'
                sh '#touch container-yes.txt'
                sh 'test -f src/index.js'
                sh'npm test'
            }
        }
        //sh 'rm -rf playwright-report index.html'
        // use this to remove previous report
        stage('Playwright-test'){
           
            steps{
                echo 'Playwright-started'
               sh'''
                    rm -rf playwright-report index.html
                    npm install serve
                    npx serve -s build -l 5000 &
                    sleep 10
                    npx playwright test
                    npx playwright test --reporter=html
                    
               '''
            }
        }
    }

    post{
        always{
            
            junit 'jest-results/junit.xml'
            publishHTML([allowMissing: false, alwaysLinkToLastBuild: true, keepAll: true, reportDir: 'playwright-report', reportFiles: 'index.html', reportName: 'Playwright HTML Report',  useWrapperFileDirectly: false ])
        }
    }
}
